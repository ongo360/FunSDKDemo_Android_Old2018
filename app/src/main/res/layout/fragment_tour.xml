<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:uilib="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_transparent"
    android:orientation="vertical"
    android:gravity="center">

    <include
        android:id="@+id/layoutTop"
        layout="@layout/layout_top_navigate_theme" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray_e5e5e5"
                android:paddingLeft="18dp"
                android:paddingStart="18dp"
                android:minHeight="45dp">
                <View
                    android:id="@+id/preset_tour_tip_color"
                    android:layout_width="3dp"
                    android:layout_height="18dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@color/theme_color"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/preset_tour_tip_color"
                    android:layout_toEndOf="@+id/preset_tour_tip_color"
                    android:gravity="center_vertical|start"
                    android:text="@string/preset_tour">
                </TextView>
            </RelativeLayout>
            <!--巡航-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tour_point_1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/tour_gray2red"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@drawable/tour_gray2red"
                        android:textSize="@dimen/big_text_size"
                        android:typeface="serif" />

                    <TextView
                        android:id="@+id/tour_point_2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/tour_gray2red"
                        android:gravity="center"
                        android:text="2"
                        android:textColor="@drawable/tour_gray2red"
                        android:textSize="@dimen/big_text_size"
                        android:typeface="serif" />

                    <TextView
                        android:id="@+id/tour_point_3"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/tour_gray2red"
                        android:gravity="center"
                        android:text="3"
                        android:textColor="@drawable/tour_gray2red"
                        android:textSize="@dimen/big_text_size"
                        android:typeface="serif" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginRight="8dp"
                    android:layout_marginEnd="8dp">
                    <TextView
                        android:id="@+id/tour_start"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:textSize="@dimen/middle_text_size"
                        android:text="@string/start_tour"
                        android:gravity="center"
                        android:background="@drawable/tour_white2red2gray"
                        android:textColor="@drawable/tour_red2white"
                        android:enabled="false"/>
                    <TextView
                        android:id="@+id/tour_start_360"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:textSize="@dimen/middle_text_size"
                        android:gravity="center"
                        android:background="@drawable/tour_white2red2gray"
                        android:textColor="@drawable/tour_red2white"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_timimg_ptz_tour_support"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.xm.ui.widget.ListSelectItem
                android:id="@+id/lsi_timimg_ptz_tour_enable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                uilib:Title="@string/timimg_ptz_tour_enable"
                uilib:ItemTitleSize="@dimen/normal_text_size"
                uilib:ItemTitleColor="@color/default_normal_text_color"
                uilib:Cap=""
                uilib:CapColor="@color/default_normal_text_color"
                uilib:CapSize="@dimen/normal_text_size"
                uilib:LineColor="@color/line_color"
                uilib:ImageRight1="@drawable/icon_checked_no"
                uilib:ImageRight2="@drawable/icon_checked_yes"/>

            <com.xm.ui.widget.ListSelectItem
                android:id="@+id/lsi_timimg_ptz_tour_interval"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                uilib:ExtraMode="SeekBar"
                uilib:Title="@string/timimg_ptz_tour_interval"
                uilib:ItemTitleSize="@dimen/normal_text_size"
                uilib:ItemTitleColor="@color/default_normal_text_color"
                uilib:Cap=""
                uilib:CapColor="@color/default_normal_text_color"
                uilib:CapSize="@dimen/normal_text_size"
                uilib:LineColor="@color/line_color"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>